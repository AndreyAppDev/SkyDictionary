<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseGridStyle">
        <item name="android:paddingLeft">@dimen/spacing_bigger</item>
        <item name="android:paddingRight">@dimen/spacing_bigger</item>
    </style>

    <style name="AppBottomSheetGridStyle">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="DetailsCardBaseStyle">
        <item name="android:padding">@dimen/spacing_smallest</item>
        <item name="android:layout_marginTop">@dimen/spacing_smallest</item>
        <item name="android:visibility">gone</item>
        <item name="android:elevation">2dp</item>
    </style>


    <style name="AppListItemGrid">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="SearchInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/textColorHighlight</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">Word...</item>
    </style>

</resources>
